echo Commit message?
read COMMIT_MESSAGE

echo '\n# Updating cache...'
curl http://localhost/projects-site-generator/site/controllers/updateCache.php &> /dev/null
echo '\n# Cache updated!'

echo '\n# Committing site code changes...'
git add .
git commit -m "$COMMIT_MESSAGE"

echo '\n# Pushing site code to GitHub repository...'
git push github # Push site/ viewer code to GitHub

echo '\n# Pushing site code to leomancini.net...'
git push leomancini.net # Push site/ viewer code to leomancini.net

cd projects
git add .

echo '\n# Committing project list changes...'
git commit -m "$COMMIT_MESSAGE"

echo '\n# Pushing project list changes to leomancini.net...'
git push leomancini.net # Push projects/ content to leomancini.net
cd ../

echo '\n### Done! ###'
echo '\n'